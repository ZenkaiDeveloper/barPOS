<div class="wrapper">
  <% @liquors.each do |liquor|%>
    <div class="wrapper-item">
      <h2><%= liquor.name %> $<%=liquor.price%></h2>

        <img class="item-img" src="<%=liquor.img_url%>" alt="liquor pic">
        <%= form_for @order_item do |form| %>
          <%= form.hidden_field :drink_id, value: liquor.id %>
          <%= form.number_field :quantity, value: 1, class: "form-control", min: 1 %>
           <%= form.submit "Add", class: "btn btn-primary" %>
        <% end %>
        </div>
      <%end%>
</div>
