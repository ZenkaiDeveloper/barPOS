<%= form_for @drink do |f| %>
<p>
<%= f.label :category %>
<%= f.select :category, ["Beer","Wine","Liquor","Cocktail"] %>
</p>
<p>
<%= f.label :name %>
<%= f.text_field :name %>
</p>
<p>
<%= f.label :price %>
<%= f.text_field :price %>
</p>
<p>
<%= f.label :img_url %>
<%= f.text_field :img_url %>
</p>
<p>
<%= f.label :active %>
<%= f.select :active, ["True", "False"]  %>
</p>
<p>
<%= f.label :info %>
<%= f.text_field :info %>
</p>

<%= f.submit "Add Item to Menu"%>
<% end %>
