<div class="wrapper">
  <% @cocktails.each do |cocktail|%>
    <div class="wrapper-item">
      <h2><%= cocktail.name %> $<%=cocktail.price%></h2>

        <img class="item-img" src="<%=cocktail.img_url%>" alt="cocktail pic">
        <%= form_for @order_item do |form| %>
          <%= form.hidden_field :drink_id, value: cocktail.id %>
          <%= form.number_field :quantity, value: 1, class: "form-control", min: 1 %>
           <%= form.submit "Add", class: "btn btn-primary" %>
        <% end %>
        </div>
      <%end%>
</div>
