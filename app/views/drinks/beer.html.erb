<div class="wrapper">
  <% @beers.each do |beer|%>
    <div class="wrapper-item">
      <h2><%= beer.name %> $<%=beer.price%></h2>

        <img class="item-img" src="<%=beer.img_url%>" alt="beer pic">
        <%= form_for @order_item do |form| %>
          <%= form.hidden_field :drink_id, value: beer.id %>
          <%= form.number_field :quantity, value: 1, class: "form-control", min: 1 %>
           <%= form.submit "Add", class: "btn btn-primary" %>
        <% end %>
        </div>
      <%end%>
</div>
